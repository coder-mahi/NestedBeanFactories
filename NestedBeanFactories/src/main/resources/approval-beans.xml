<?xml version="1.0" encoding="UTF-8"?>
<beans
    xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframwork.org/schema/beans/spring-beans.xsd">
    
    <bean id="id" class="com.beans.LoanDetails">
        <property name="loanId" value="111"/>
        <property name="loanType" value="3-wheeler"/>
        <property name="customer" value="raja"/>
    </bean>
    <bean id="bla" class="com.beans.BankLoanApprover">
        <property name="details" ref="id"/>
    </bean>
</beans>